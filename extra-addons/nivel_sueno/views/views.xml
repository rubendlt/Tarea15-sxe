<odoo>
  <data>
    <record model="ir.ui.view" id="nivel_sueno.list">
      <field name="name">nivel_sueno list</field>
      <field name="model">nivel_sueno.nivel_sueno</field>
      <field name="arch" type="xml">
        <list>
          <field name="alumno"/>
          <field name="nivel_sueno"/>
          <field name="bebida_recomendado"/>
        </list>
      </field>
    </record>

    <record model="ir.ui.view" id="nivel_sueno.form">
      <field name="name">nivel_sueno form</field>
      <field name="model">nivel_sueno.nivel_sueno</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="alumno"/>
              <field name="nivel_sueno"/>
              <field name="bebida_recomendado" readonly="1"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.actions.act_window" id="nivel_sueno.action_window">
      <field name="name">Calculadora de Sueño</field>
      <field name="res_model">nivel_sueno.nivel_sueno</field>
      <field name="view_mode">list,form</field>
    </record>

    <menuitem name="Nivel Sueño" id="nivel_sueno.menu_root"/>

    <menuitem name="Listado" id="nivel_sueno.menu_1"
              parent="nivel_sueno.menu_root"
              action="nivel_sueno.action_window"/>
  </data>
</odoo>