<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="reporte_hoja_taller_documento">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="text-center" style="margin-top: 20px;">
                            <h2>ORDEN DE PREPARACIÃ“N</h2>
                            <h1 t-field="doc.name"/> </div>

                        <div class="row mt32 mb32">
                            <div class="col-6">
                                <strong>Cliente:</strong> <span t-field="doc.partner_id.name"/><br/>
                                <strong>Fecha:</strong> <span t-field="doc.date_order" t-options='{"widget": "date"}'/>
                            </div>
                        </div>

                        <table class="table table-sm o_main_table">
                            <thead>
                                <tr>
                                    <th class="text-center">Check</th>
                                    <th>Producto</th>
                                    <th class="text-right">Cantidad</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="doc.order_line" t-as="line">
                                    <t t-if="not line.display_type">
                                        <tr>
                                            <td class="text-center">
                                                <span style="border: 1px solid black; padding: 0 8px;"> </span>
                                                <span t-translation="off">[ ]</span>
                                            </td>
                                            <td><span t-field="line.product_id.name"/></td>
                                            <td class="text-right">
                                                <span t-field="line.product_uom_qty"/>
                                                <span t-field="line.product_uom.name"/>
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                            </tbody>
                        </table>
                        <div class="mt64">
                            <p>Firma del Operario: __________________________</p>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>